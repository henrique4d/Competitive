#include <bits/stdc++.h>
using namespace std;

    struct Element{
        int index;
        int a;
        int b;
    };
    bool compare(Element u, Element v){
        if (u.a*v.b!=u.b*v.a) return u.a*v.b < u.b*v.a;
        return u.index < v.index;


    }

int main (){

    int t;
    cin >> t;

    while(t--){
        int n;
        cin >> n;
        Element e[n];
        for (int i=0;i<n;i++){
            cin >> e[i].a >> e[i].b;
            e[i].index = i+1;
        }
        sort(e,e+n, compare);

        for (int i=0;i<n;i++){
            if (i) cout << " ";
            cout << e[i].index;
        }
        cout << endl;
        if (t!=0)
            cout << endl;

    }



    return 0;

}